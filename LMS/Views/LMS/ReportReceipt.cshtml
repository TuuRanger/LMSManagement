@model List<LMS.Models.Receipt>
@{
    ViewBag.Title = "Receipt";
}

<section class="content-header">
    <h1>
        Receipt Management

    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Forms</a></li>
        <li class="active">Receipt</li>
    </ol>
</section>
<section class="content">
    @{ string UserFullName = "";
     string UserType = "0";
     string UserTypeName = "";
     string AgentID = "";
     if (HttpContext.Current.Session["LogedUserFullname"] != null)
     {
         UserFullName = HttpContext.Current.Session["LogedUserFullname"].ToString();
         AgentID = HttpContext.Current.Session["LogedAgentID"].ToString();
         UserType = HttpContext.Current.Session["LogedUserType"].ToString();

         if (UserType == "1")
         {
             UserTypeName = "Internal";
         }
         else if (UserType == "2")
         {
             UserTypeName = "Sub Agent";
         }
     }

    }
    <div class="row">
        <div class="col-md-12">

            <div class="box box-success">
                <div class="box-header with-border">
                    @{string aDate = Request.QueryString["sDate"];
                    string bDate = Request.QueryString["eDate"];

                    if (aDate == null || aDate == "")
                    {
                        aDate = DateTime.Now.ToString("dd/MM/yyyy");
                    }
                    if (bDate == null || bDate == "")
                    {
                        bDate = DateTime.Now.ToString("dd/MM/yyyy");
                    }
                    }
                    <h3 class="box-title">Receipt</h3>
                    (Search Between @aDate To @bDate)
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <form action="/LMS/ReportReceipt" method="get" onsubmit="return chk_form()">
                    @{
                        DateTime sDate = DateTime.Now;
                        DateTime eDate = DateTime.Now;
                    }
                    <div class="box-header with-border">
                        <div class="col-md-4">
                            <label>Receipt Date Form</label>
                            <div class="input-group date">
                                <input type="text" class="form-control" name="sDate" id="sDate" data-select="datepicker"
                                       data-val="true" data-val-required="Date is required" value="@aDate">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success" data-toggle="datepicker">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                                @*<div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>

                        <input class="form-control" data-val="true" data-val-required="Date is required"
                               id="sDate" name="sDate" type="date" value="@sDate" />*@

                            </div>
                        </div>
                        <div class="col-md-4">
                            <label>Receipt Date To</label>
                            <div class="input-group date">
                                <input type="text" class="form-control" name="eDate" id="eDate" data-select="datepicker"
                                       data-val="true" data-val-required="Date is required" value="@bDate">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success" data-toggle="datepicker">
                                        <i class="fa fa-calendar"></i>
                                    </button>
                                </span>
                                @*<div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>

                        <input class="form-control" data-val="true" data-val-required="Date is required"
                               id="eDate" name="eDate" type="date" value="@eDate" />*@
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-success btn-block" data-animation-type="bounce" data-animation-duration="1" style="animation-duration: 1s; visibility: visible;">SEARCH NOW</button>
                        </div>
                    </div>
                </form>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="col-xs-12 table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr style="background-color:#27AE60">
                                    <th align="center"><font color="#fff">Receipt No</font></th>
                                    <th align="center"><font color="#fff">Receipt Date</font></th>
                                    <th align="center"><font color="#fff">Invoice No</font></th>
                                    <th align="center"><font color="#fff">วันที่ชำระเงิน</font></th>
                                    <th align="center"><font color="#fff">จำนวนเงิน</font></th>
                                    <th align="center"><font color="#fff">ประเภทการชำระเงิน</font></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    String Status = "";
                                    String SClass = "";
                                    if (item.PaymentType == 1)
                                    {
                                        Status = "Cash";
                                        SClass = "label label-success";
                                    }
                                    else if (item.PaymentType == 2)
                                    {
                                        Status = "PayPal";
                                        SClass = "label label-primary";
                                    }
                                    else if (item.PaymentType == 3)
                                    {
                                        Status = "Credit";
                                        SClass = "label label-primary";
                                    }
                                    else if (item.PaymentType == 4)
                                    {
                                        Status = "Cheque";
                                        SClass = "label label-danger";
                                    }
                                    else if (item.PaymentType == 5)
                                    {
                                        Status = "Transfer";
                                        SClass = "label label-success";
                                    }


                                    <tr onmouseover="ChangeBackgroundColor(this)" onmouseout="RestoreBackgroundColor(this)">
                                        <td><a href="/LMS/ReceiptInfo?ReceiptNo=@item.ReceiptNo">@item.ReceiptNo</a></td>
                                        <td>@item.ReceiptDate.ToString("dd/MM/yyyy")</td>
                                        <td>@item.InvoiceNo</td>
                                        <td>@item.PaymentDate.ToString("dd/MM/yyyy")</td>
                                        <td>@item.GrandTotal.ToString("#,###.##")</td>
                                        <td><span class="@SClass">@Status</span></td>

                                    </tr>


                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <a href="/LMS/ReceiptInvoice" class="btn btn-sm btn-info btn-flat pull-right">Place New Receipt</a>
                    <a href="/LMS/ReportReceipt" class="btn btn-sm btn-default btn-flat pull-left">View All Receipt</a>
                </div>
                <!-- /.box-footer -->
            </div>

        </div>

    </div>
</section>
<script type="text/javascript">

    var TableBackgroundNormalColor = "#ffffff";
    var TableBackgroundMouseoverColor = "#D5F5E3";

    // These two functions need no customization.
    function ChangeBackgroundColor(row) {
        TableBackgroundNormalColor = row.style.backgroundColor;
        row.style.backgroundColor = TableBackgroundMouseoverColor;
    }
    function RestoreBackgroundColor(row) { row.style.backgroundColor = TableBackgroundNormalColor; }
</script>
